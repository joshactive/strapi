{
  "kind": "singleType",
  "collectionName": "blog_page",
  "info": {
    "singularName": "blog-page",
    "pluralName": "blog-pages",
    "displayName": "Blog Page",
    "description": "Blog index page content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "pageTitle": {
      "type": "string",
      "default": "Blog"
    },
    "pageSubtitle": {
      "type": "text"
    },
    "heroBackgroundImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "categories": {
      "type": "component",
      "repeatable": true,
      "component": "blog.category-item"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "sitemap": {
      "type": "component",
      "repeatable": false,
      "component": "shared.sitemap"
    }
  }
}

