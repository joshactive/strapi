{
  "kind": "singleType",
  "collectionName": "pre_orders_pages",
  "info": {
    "singularName": "pre-orders-page",
    "pluralName": "pre-orders-pages",
    "displayName": "Pre-Orders Page",
    "description": "Content for the /pre-orders page including hero section and SEO metadata"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "heroBackgroundImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "heroTitle": {
      "type": "string",
      "default": "Pre-Orders",
      "required": true
    },
    "heroSubtitle": {
      "type": "text",
      "default": "Be the first to secure your spot for our upcoming events, tours, and special experiences. Limited availability.",
      "required": true
    },
    "heroKicker": {
      "type": "string",
      "default": "EXCLUSIVE OPPORTUNITIES",
      "required": false
    },
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false
    }
  }
}
