{
  "kind": "collectionType",
  "collectionName": "people",
  "info": {
    "singularName": "person",
    "pluralName": "people",
    "displayName": "Person",
    "description": "Team members and people"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string",
      "required": false
    },
    "bio": {
      "type": "richtext",
      "required": false
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "order": {
      "type": "integer",
      "required": false,
      "default": 0
    },
    "displayOnAboutPage": {
      "type": "boolean",
      "default": true,
      "required": false
    },
    "linkedin": {
      "type": "string",
      "required": false
    },
    "email": {
      "type": "email",
      "required": false
    },
    "sitemap": {
      "type": "component",
      "repeatable": false,
      "component": "shared.sitemap"
    }
  }
}