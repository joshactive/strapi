{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "content": {
      "type": "richtext"
    },
    "reviewName": {
      "type": "string"
    },
    "reviewDate": {
      "type": "date"
    },
    "reviewApplyTo": {
      "type": "text"
    },
    "reviewUrl": {
      "type": "string"
    },
    "reviewUniqueId": {
      "type": "string"
    },
    "displayOnFrontEnd": {
      "type": "boolean",
      "default": true
    },
    "sitemap": {
      "type": "component",
      "component": "shared.sitemap",
      "repeatable": false
    },
    "reviewRating": {
      "type": "integer",
      "min": 1,
      "max": 5
    }
  }
}
