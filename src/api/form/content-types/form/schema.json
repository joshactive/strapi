{
  "kind": "collectionType",
  "collectionName": "forms",
  "info": {
    "singularName": "form",
    "pluralName": "forms",
    "displayName": "Form",
    "description": "Dynamic forms with webhook integration"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "heroTitle": {
      "type": "string"
    },
    "heroSubtitle": {
      "type": "text"
    },
    "heroKicker": {
      "type": "string"
    },
    "heroBackgroundImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "descriptionTitle": {
      "type": "string"
    },
    "formHeading": {
      "type": "string",
      "default": "Submit Your Information"
    },
    "formSubtitle": {
      "type": "text"
    },
    "formLayout": {
      "type": "enumeration",
      "enum": [
        "one-column",
        "two-column"
      ],
      "default": "one-column"
    },
    "formWebhookUrl": {
      "type": "text"
    },
    "webhookFormat": {
      "type": "enumeration",
      "enum": [
        "labels",
        "names"
      ],
      "default": "labels"
    },
    "formFields": {
      "type": "json"
    },
    "showOtherOptions": {
      "type": "boolean",
      "default": false
    },
    "displayOnArchive": {
      "type": "boolean",
      "default": true
    },
    "submitButtonConditional": {
      "type": "boolean",
      "default": false
    },
    "submitButtonConditionalField": {
      "type": "string"
    },
    "submitButtonConditionalOperator": {
      "type": "enumeration",
      "enum": [
        "equals",
        "not_equals",
        "contain",
        "not_contain",
        "not_empty",
        "empty",
        "greater",
        "less"
      ]
    },
    "submitButtonConditionalValue": {
      "type": "string"
    },
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false
    }
  }
}
