{
  "kind": "collectionType",
  "collectionName": "sitemap_patterns",
  "info": {
    "singularName": "sitemap-pattern",
    "pluralName": "sitemap-patterns",
    "displayName": "Sitemap Pattern",
    "description": "Define URL patterns for content types"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "collectionName": {
      "type": "string",
      "required": true,
      "unique": true,
      "default": "api::page.page"
    },
    "pattern": {
      "type": "string",
      "required": true,
      "default": "/[slug]"
    },
    "priority": {
      "type": "decimal",
      "min": 0,
      "max": 1,
      "default": 0.5
    },
    "changeFrequency": {
      "type": "enumeration",
      "enum": [
        "always",
        "hourly",
        "daily",
        "weekly",
        "monthly",
        "yearly",
        "never"
      ],
      "default": "monthly"
    }
  }
}

