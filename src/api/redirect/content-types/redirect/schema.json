{
  "kind": "collectionType",
  "collectionName": "redirects",
  "info": {
    "singularName": "redirect",
    "pluralName": "redirects",
    "displayName": "Redirect",
    "description": "URL redirects managed in Strapi"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "sourcePath": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "destinationPath": {
      "type": "string",
      "required": true
    },
    "statusCode": {
      "type": "integer",
      "default": 302,
      "required": true,
      "min": 301,
      "max": 308
    },
    "enabled": {
      "type": "boolean",
      "default": true
    },
    "notes": {
      "type": "text"
    },
    "sitemap": {
      "type": "component",
      "repeatable": false,
      "component": "shared.sitemap"
    }
  }
}