{
  "kind": "singleType",
  "collectionName": "privacy_policy_pages",
  "info": {
    "singularName": "privacy-policy-page",
    "pluralName": "privacy-policy-pages",
    "displayName": "Privacy Policy Page",
    "description": "Content for the Privacy Policy page with dynamic sections and optional forms"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "pageTitle": {
      "type": "string",
      "default": "Privacy Policy",
      "required": true
    },
    "introText": {
      "type": "richtext",
      "required": false
    },
    "lastUpdated": {
      "type": "date",
      "required": false
    },
    "heroBackgroundImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "sections": {
      "type": "component",
      "repeatable": true,
      "component": "privacy-policy.section"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}

